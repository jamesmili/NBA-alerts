{
  "name": "NBA News",
  "description": "A chrome extension that keeps you updated with any NBA related news.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["public/bundle.js", "jquery.min.js"]
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage"
  ],
  "icons":{
    "128":"/public/img/nba.png"
  },
  "browser_action":{
    "default_popup": "src/index.html"
  },
  "content_scripts": [{
  "matches":    ["*://*/*"],
  "js":         ["public/bundle.js"],
  "run_at":     "document_idle",
  "all_frames": false
  }]
}
